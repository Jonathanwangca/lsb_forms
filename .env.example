# ============================================
# LSB RFQ System Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# MySQL Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=lsb_forms
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ============================================
# Application Configuration
# ============================================
APP_NAME="LSB RFQ System"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/aiforms
APP_TIMEZONE=Asia/Shanghai

# ============================================
# File Upload Configuration
# ============================================
UPLOAD_PATH=uploads/
UPLOAD_MAX_SIZE=20971520
UPLOAD_ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,dwg,dxf,jpg,jpeg,png,zip,rar

# ============================================
# Session Configuration
# ============================================
SESSION_LIFETIME=120
SESSION_DRIVER=file

# ============================================
# OpenAI API Configuration (Optional)
# ============================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# ============================================
# Email Configuration (Optional)
# ============================================
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="LSB RFQ System"
